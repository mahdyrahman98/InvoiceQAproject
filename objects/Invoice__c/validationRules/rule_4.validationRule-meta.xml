<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>rule_4</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISBLANK(Paid_Date__c),(ISPICKVAL(Status__c, &quot;Paid&quot;)))</errorConditionFormula>
